@model SalonManager.Web.ViewModels.RegistrarViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Registrar";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container">
    <h1 class="mt-5 mb-4 text-center">Criar Usuários</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }
            @if (ViewData["MensagemSucesso"] != null)
            {
                <div class="alert alert-dismissible" role="alert">
                    @ViewData["MensagemSucesso"]
                </div>
            }
            <form asp-action="Registrar" method="post">
                <div class="mb-3 mt-3">
                    <input type="text" asp-for="Username" class="form-control" placeholder="Username" name="Username" />
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
                <div class="mb-3 mt-3">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email" name="Email" />
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="mb-3 mt-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Senha" name="Password" />
                    @Html.ValidationMessageFor(model => model.Password)
                </div>               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a href="@Url.Action("Login")" class="btn btn-secondary ml-2">Cancelar</a>
                </div>
            </form>


        </div>
    </div>
</div>