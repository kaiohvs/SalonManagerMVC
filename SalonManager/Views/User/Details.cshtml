@model SalonManager.Web.ViewModels.UserViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalhes do Usuário";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<div class="container">
    <h1 class="mt-5 mb-4 text-center">Detalhes do Usuário</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>

            <div class="text-center mt-4">
                <a href="@Url.Action("Edit", new { id = @Model.Id })" class="btn btn-warning">Editar</a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar à Lista</a>
            </div>
        </div>
    </div>
</div>